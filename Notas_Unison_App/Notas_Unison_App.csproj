    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Notas_Unison_Core\Notas_Unison_Core.csproj" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="Resources\Logo_Unison.png" />
      <Resource Include="Resources\Logo_Unison.png" />
      <None Remove="Resources\extra-icon.jpg" />
